{
  "name": "kaplusbo.ninja",
  "version": "1.0.0",
  "description": "Ka+Bo",
  "scripts": {
    "jade": "jade --pretty --hierarchy src/jade/site -o out",
    "stylus": "mkdirp out/css; stylus -u yeticss ./src/stylus/main.styl --out ./out/css -m",
    "js": "mkdirp out/js; browserify src/js/main.js -o out/js/bundle.js -dv",
    "images": "mkdirp out/images && cp -R src/images out/images",
    "svg": "mkdirp out/images && cp -R src/svg out/svg",
    "build": "parallelshell 'npm run jade' 'npm run stylus' 'npm run js' 'npm run images' 'npm run svg'",
    "deploy": "npm run build && surge ./out kaplusbo.surge.sh",
    "watch-jade": "node tasks/watch.js --dir ./src/jade --exec 'npm run jade'",
    "watch-stylus": "node tasks/watch.js --dir ./src/stylus --exec 'npm run stylus'",
    "watch-js": "mkdirp out/js; watchify src/js/main.js -o out/js/bundle.js -dv",
    "watch": "parallelshell 'npm run watch-jade' 'npm run watch-js' 'npm run watch-stylus'",
    "livereload": "live-reload --port=9000 ./out",
    "static-server": "http-server ./out -s -o",
    "serve": "parallelshell 'npm run static-server' 'npm run livereload'",
    "clean": "trash out",
    "start": "npm run build -s && parallelshell 'npm run serve -s' 'npm run watch -s'"
  },
  "author": {
    "name": "Kahlil Lechelt",
    "email": "hello@kahlil.info",
    "url": "http://kahlil.info"
  },
  "license": "MIT",
  "repository": "distilledhype/tiny-static",
  "devDependencies": {
    "browserify": "^10.2.1",
    "eslint": "^0.23.0",
    "http-server": "^0.8.0",
    "jade": "^1.11.0",
    "jstransformer-markdown-it": "^0.1.0",
    "jstransformer-marked": "0.0.1",
    "live-reload": "^1.1.0",
    "minimist": "^1.1.1",
    "mkdirp": "^0.5.1",
    "node-watch": "^0.3.4",
    "parallelshell": "^1.2.0",
    "stylus": "^0.51.1",
    "surge": "^0.14.2",
    "trash": "^1.4.1",
    "uglify": "^0.1.3",
    "watchify": "^3.2.1",
    "yeticss": "git+ssh://git@github.com/andyet/yeticss#v6.0.7"
  }
}
